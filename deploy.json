{
  "$schema": "https://deploy.workers.cloudflare.com/schemas/deploy.json",
  "name": "cf-mail",
  "secrets": [
    {
      "name": "TG_BOT_TOKEN",
      "description": "Telegram Bot Token"
    },
    {
      "name": "TG_CHAT_ID",
      "description": "Telegram Chat ID"
    }
  ],
  "vars": [
    {
      "name": "MAIL_DOMAIN",
      "description": "邮箱域名",
      "example": "example.com"
    },
    {
      "name": "TG_TOPIC_ID",
      "description": "Telegram群组的Topic ID（可选）",
      "example": "123"
    }
  ]
}
